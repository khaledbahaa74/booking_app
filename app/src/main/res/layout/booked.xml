<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bookedMovieNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Name :"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/bookedMovieNameOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Cast Away"
                android:textColor="#11C894"
                tools:ignore="HardcodedText"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bookedMovieDateLabel"
                tools:ignore="HardcodedText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Date :"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/bookedMovieDateOutput"
                tools:ignore="HardcodedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:text="30/08/2021"
                android:textColor="#11C894"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bookedMovieTimeLabel"
                tools:ignore="HardcodedText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Time :"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/bookedMovieTimeOutput"
                tools:ignore="HardcodedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:text="00:00"
                android:textColor="#11C894"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ticketsLabel"
                tools:ignore="HardcodedText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tickets Booked :"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/ticketsOutput"
                tools:ignore="HardcodedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="4"
                android:textColor="#11C894"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalPriceLabel"
                tools:ignore="HardcodedText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Money Paid :"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/totalPriceOutput"
                tools:ignore="HardcodedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="200 L.E."
                android:textColor="#11C894"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>